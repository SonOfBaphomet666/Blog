---
const allPosts = Object.values(
  await import.meta.glob("../../pages/posts/*.md", { eager: true }),
);
---

<div class="card">
  {
    allPosts.map((post: any) => (
      <div class="cardBox">
        <div class="cardBox__box">
          <div class="cardBox__title">
            <h3>{post.frontmatter.title}</h3>
          </div>
          <div class="cardBox__date">
            <p>{post.frontmatter.date.toString().slice(0, 10)}</p>
          </div>
          <div class="cardBox__par">
            <p>{post.frontmatter.text}</p>
            <a class="link" href={post.url}>
              View the entire post!
            </a>
          </div>
        </div>
      </div>
    ))
  }
</div>
